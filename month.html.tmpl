#encoding UTF-8
<!DOCTYPE html>
<html class="no-js">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="profile" href="http://gmpg.org/xfn/11" />

        <title>$station.location – Месечно метеорологично обобщение</title>

        <!-- Open Graph -->
        <meta property="og:site_name" content="$station.location – месечно метеорологично обобщение" />
        <meta property="og:description" content="Месечно метеорологично обобщение от $station.location" />
		<meta property="og:type" content="website" />

        <!-- Icons -->
        <link rel="icon" href="favicon.ico" type="image/png">
		<link rel="apple-touch-icon" href="touch-icon.png"/>

        <!-- Styles -->
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,300,700&subset=latin,cyrillic" rel="stylesheet" type="text/css">
        <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
        <link rel="stylesheet" href="css/main.css">

        <!-- Skripte -->
        <script src="js/modernizr-2.6.2.min.js"></script>

        <script type="text/javascript">
            function openNoaaFile(date)
            {
                var url = "NOAA/NOAA-";
                url = url + date;
                url = url + ".txt";
                if(date !== "Месечно обобщение" && date !== "Годишно обобщение") {
                    window.location=url;
                }
            }
        </script>
    </head>
    <body>
        <header>
            <div class="container-fix" >
                <h1><i class="fa fa-cloud" ></i> $station.location</h1>
            </div>
            <div class="container-fix" >
                <div class="h-left vertical-align-top" >
                <p>$station.latitude[0]&deg; $station.latitude[1]' $station.latitude[2]Ш | $station.longitude[0]&deg; $station.longitude[1]' $station.longitude[2]Д | $station.altitude | <a href="https://www.google.com/maps/?q=$station.location" target="_blank" ><i class="fa fa-map-marker" ></i> Покажи на картата</a></p>
                <h2>Месечно метеорологично обобщение</h2>
                <p><i class="fa fa-clock-o" ></i> $current.dateTime</p>
                </div>

                <div class="h-right vertical-align-top" >
                    <table>
                        <tr><td><b>Станция:</b></td><td>$station.hardware</td></tr>
                        <tr><td><b>Софтуер:</b></td><td><a href="http://weewx.com/" target="_blank" >weewx v$station.version</a></td></tr>
                        <tr><td><b>Време на работа на софтуера:</b></td><td>$station.uptime</td></tr>
                        <tr><td><b>Време на работа на сървъра:</b></td><td>$station.os_uptime</td></tr>
                    </table>
                </div>

                <nav>
                    <ul>
                        <li><a href="index.html" >Сега</a></li>
                        <li><a href="week.html" >Седмица</a></li>
                        <li class="active"><a href="month.html" >Месец</a></li>
                        <li><a href="year.html" >Година</a></li>
                        <li><a href="RSS/weewx_rss.xml" >RSS</a></li>
                        <li><select name="noaaselect" onchange="openNoaaFile(value)">
                                <option>Месечно обобщение</option>
                                #for $monthYear in $SummaryByMonth
                                    <option value="$monthYear">$monthYear</option>
                                #end for
                            </select></li>
                        <li><select name="noaaselect" onchange="openNoaaFile(value)">
                                <option>Годишно обобщение</option>
                                #for $yr in $SummaryByYear
                                    <option value="$yr">$yr</option>
                                #end for
                            </select></li>
                    </ul>
                </nav>
            </div>
        </header>

        <div class="main" >
        <div class="container" >

            <div class="left" >
                <div class="card" >

                  <h1><i class="fa fa-calendar m-orange" ></i> Този месец</h1>
                    <table class="tablespacer">
                        <tr><td>Макс. температура</td><td>$month.outTemp.max</td><td>$month.outTemp.maxtime</td></tr>
                        <tr><td>Мин. температура</td><td>$month.outTemp.min</td><td>$month.outTemp.mintime</td></tr>
                        <tr><td>Макс. топлинен индекс</td><td>$month.heatindex.max</td><td>$month.heatindex.maxtime</td></tr>
                        <tr><td>Мин. мразовитост</td><td>$month.windchill.min</td><td>$month.windchill.mintime</td></tr>
                        <tr><td>Макс. точка на оросяване</td><td>$month.dewpoint.max</td><td>$month.dewpoint.maxtime</td></tr>
                        <tr><td>Мин. точка на оросяване</td><td>$month.dewpoint.min</td><td>$month.dewpoint.mintime</td></tr>
                        <tr><td>Макс. влажност</td><td>$month.outHumidity.max</td><td>$month.outHumidity.maxtime</td></tr>
                        <tr><td>Мин. влажност</td><td>$month.outHumidity.min</td><td>$month.outHumidity.mintime</td></tr>
                        <tr><td>Макс. налягане (барометър)</td><td>$month.barometer.max</td><td>$month.barometer.maxtime</td></tr>
                        <tr><td>Мин. налягане (барометър)</td><td>$month.barometer.min</td><td>$month.barometer.mintime</td></tr>
                        <tr><td>Количество дъжд днес</td><td>$month.rain.sum</td><td></td></tr>
                        <tr><td>Макс. интензивност на дъжда</td><td>$month.rainRate.max</td><td>$month.rainRate.maxtime</td></tr>
                        <tr><td>Най-силен вятър</td><td>$month.wind.max $month.wind.gustdir</td><td>$month.wind.maxtime</td></tr>
                        <tr><td>Ср. скорост на вятъра</td><td>$month.wind.avg</td><td></td></tr>
                        <tr><td><abbr title="Средно квадратично">СК</abbr> на скоростта на вятъра</td><td>$month.wind.rms</td><td></td></tr>
                        <tr><td>Ср. скорост на векторите на вятъра</td><td>$month.wind.vecavg</td><td></td></tr>
                        <tr><td>Ср. посока на векторите на вятъра</td><td>$month.wind.vecdir</td><td></td></tr>
                        <tr><td>Макс. вътрешна температура</td><td>$month.inTemp.max</td><td>$month.inTemp.maxtime</td></tr>
                        <tr><td>Мин. вътрешна температура</td><td>$month.inTemp.min</td><td>$month.inTemp.mintime</td></tr>
                        #if $month.extraTemp1.has_data
                        <tr><td>Макс. температура на езерото</td><td>$month.extraTemp1.max</td><td>$month.extraTemp1.maxtime</td></tr>
                        <tr><td>Мин. температура на езерото</td><td>$month.extraTemp1.min</td><td>$month.extraTemp1.mintime</td></tr>
                        #end if
                        #if $month.UV.has_data
                        <tr><td>Макс. УВ индекс</td><td>$month.UV.max</td><td>$month.UV.maxtime</td></tr>
                        <tr><td>Мин. УВ индекс</td><td>$month.UV.min</td><td>$month.UV.mintime</td></tr>
                        #end if
                        #if $month.ET.has_data and $month.ET.sum.raw >0.0
                        <tr><td>Макс. ET</td><td>$month.ET.max</td><td>$month.ET.maxtime</td></tr>
                        <tr><td>Мин. ET</td><td>$month.ET.min</td><td>$month.ET.mintime</td></tr>
                        #end if
                        #if $month.radiation.has_data
                        <tr><td>Макс. радиация</td><td>$month.radiation.max</td><td>$month.radiation.maxtime</td></tr>
                        <tr><td>Мин. радиация</td><td>$month.radiation.min</td><td>$month.radiation.mintime</td></tr>
                        #end if
                    </table>
                </div>

                <div class="card" >
                    <h1><i class="fa fa-calendar-o m-rot" ></i> Календарна година</h1>
                    <table class="tablespacer">
                        <tr><td>Макс. температура</td><td>$year.outTemp.max</td><td>$year.outTemp.maxtime</td></tr>
                        <tr><td>Мин. температура</td><td>$year.outTemp.min</td><td>$year.outTemp.mintime</td></tr>
                        <tr><td>Макс. топлинен индекс</td><td>$year.heatindex.max</td><td>$year.heatindex.maxtime</td></tr>
                        <tr><td>Мин. мразовитост</td><td>$year.windchill.min</td><td>$year.windchill.mintime</td></tr>
                        <tr><td>Макс. точка на оросяване</td><td>$year.dewpoint.max</td><td>$year.dewpoint.maxtime</td></tr>
                        <tr><td>Мин. точка на оросяване</td><td>$year.dewpoint.min</td><td>$year.dewpoint.mintime</td></tr>
                        <tr><td>Макс. влажност</td><td>$year.outHumidity.max</td><td>$year.outHumidity.maxtime</td></tr>
                        <tr><td>Мин. влажност</td><td>$year.outHumidity.min</td><td>$year.outHumidity.mintime</td></tr>
                        <tr><td>Макс. налягане (барометър)</td><td>$year.barometer.max</td><td>$year.barometer.maxtime</td></tr>
                        <tr><td>Мин. налягане (барометър)</td><td>$year.barometer.min</td><td>$year.barometer.mintime</td></tr>
                        <tr><td>Количество дъжд днес</td><td>$year.rain.sum</td><td></td></tr>
                        <tr><td>Макс. интензивност на дъжда</td><td>$year.rainRate.max</td><td>$year.rainRate.maxtime</td></tr>
                        <tr><td>Най-силен вятър</td><td>$year.wind.max $year.wind.gustdir</td><td>$year.wind.maxtime</td></tr>
                        <tr><td>Ср. скорост на вятъра</td><td>$year.wind.avg</td><td></td></tr>
                        <tr><td><abbr title="Средно квадратично">СК</abbr> на скоростта на вятъра</td><td>$year.wind.rms</td><td></td></tr>
                        <tr><td>Ср. скорост на векторите на вятъра</td><td>$year.wind.vecavg</td><td></td></tr>
                        <tr><td>Ср. посока на векторите на вятъра</td><td>$year.wind.vecdir</td><td></td></tr>
                        <tr><td>Макс. вътрешна температура</td><td>$year.inTemp.max</td><td>$year.inTemp.maxtime</td></tr>
                        <tr><td>Мин. вътрешна температура</td><td>$year.inTemp.min</td><td>$year.inTemp.mintime</td></tr>
                        #if $year.extraTemp1.has_data
                        <tr><td>Макс. температура на езерото</td><td>$year.extraTemp1.max</td><td>$year.extraTemp1.maxtime</td></tr>
                        <tr><td>Мин. температура на езерото</td><td>$year.extraTemp1.min</td><td>$year.extraTemp1.mintime</td></tr>
                        #end if
                        #if $year.UV.has_data
                        <tr><td>Макс. УВ индекс</td><td>$year.UV.max</td><td>$year.UV.maxtime</td></tr>
                        <tr><td>Мин. УВ индекс</td><td>$year.UV.min</td><td>$year.UV.mintime</td></tr>
                        #end if
                        #if $year.ET.has_data and $year.ET.sum.raw >0.0
                        <tr><td>Макс. ET</td><td>$year.ET.max</td><td>$year.ET.maxtime</td></tr>
                        <tr><td>Мин. ET</td><td>$year.ET.min</td><td>$year.ET.mintime</td></tr>
                        #end if
                        #if $year.radiation.has_data
                        <tr><td>Макс. радиация</td><td>$year.radiation.max</td><td>$year.radiation.maxtime</td></tr>
                        <tr><td>Мин. радиация</td><td>$year.radiation.min</td><td>$year.radiation.mintime</td></tr>
                        #end if
                    </table>
                </div>

            </div>

            <div class="right" >

                <div class="card cc graphs" >
                    <h1><i class="fa fa-line-chart m-gruen" ></i> Месечна статистика и графики</h1>

                    <img src="monthtempdew.png" alt="temperatures" />
                    <img src="monthtempchill.png" alt="heatchill" />
                    <img src="monthinside.png" alt="Inside" />
                    <img src="monthbarometer.png" alt="barometer"/>
                    <img src="monthrain.png" alt="rain" />
                    <img src="monthwind.png" alt="wind" />
                    <img src="monthwinddir.png" alt="Hi Wind" />
                    <img src="monthwindvec.png" alt="Wind Vector" />
                    <img src="monthhumidity.png" alt="humidity" />
                    #if $month.UV.has_data
                    <img src="monthuv.png" alt="UV Index" />
                    #end if
                    #if $month.radiation.has_data
                    <img src="monthradiation.png" alt="Radiation" />
                    #end if
                    #if $month.UV.has_data
                    <img src="monthuv.png" alt="UV Index" />
                    #end if
                    #if $month.rxCheckPercent.has_data
                    <img src="monthrx.png" alt="month rx percent"/>
                    #end if
                    #if $month.extraTemp1.has_data
                    <img src="monthpond.png" alt="Pond Temperatures" />
                    #end if
                </div>

            </div>
        </div>
        </div>

        <footer>
            <div class="container-fix" >
            Някои права запазени. &copy; 2016
            #if $Extras.has_key('you')
            $Extras.you
            #end if
            &sdot; Source on <a href="https://github.com/ignisf/sofaskin-bulgarian" >Github</a>
